// Calculator module demonstrating more complex logic
export fun divide(a: i32, b: i32): i32 {
    if (b == 0) {
        return 0;
    }
    return a / b;
}

export fun modulo(a: i32, b: i32): i32 {
    if (b == 0) {
        return 0;
    }
    return a % b;
}

export fun is_even(n: i32): i32 {
    if (n % 2 == 0) {
        return 1;
    }
    return 0;
}

export fun power_of_two(n: i32): i32 {
    let result = 1;
    for (let i = 0; i < n; i = i + 1) {
        result = result * 2;
    }
    return result;
}
